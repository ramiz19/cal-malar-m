<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.akgun.akgunalarms.MainActivity">


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="0dp"
        android:headerBackground="@android:color/holo_orange_dark"
        android:numbersBackgroundColor="@android:color/holo_purple"
        android:numbersSelectorColor="@android:color/darker_gray"
        android:numbersTextColor="@android:color/white" />

    <Button
        android:id="@+id/alarm_kur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/alarm_kur"
        android:textSize="18sp"
        android:layout_below="@+id/update_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/alarm_iptal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/alarm_iptal"
        android:textSize="18sp"
        android:layout_above="@+id/spinner1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alarm_kur"
        android:layout_marginTop="13dp" />


</RelativeLayout>
